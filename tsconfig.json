{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",

    "declaration": false,
    "sourceMap": true,
    "strict": true,
    "target": "ES2019",
    "moduleResolution": "node",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // temp, remove this. stupid aws

    "typeRoots": [
      "./src/typings",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

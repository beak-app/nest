{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",

    "declaration": false,
    "sourceMap": true,
    "strict": true,
    "target": "ES2019",
    "moduleResolution": "node",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
